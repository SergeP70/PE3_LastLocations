<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B4.PE3.PilleS.Views.PositionContentView">
    <StackLayout Padding="15" Spacing="10" HorizontalOptions="FillAndExpand">
        <Label Text="My Location" FontSize="Large" 
               VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
        <Grid x:Name="grdTracking" VerticalOptions="FillAndExpand"
              BackgroundColor="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Status:" 
                   Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
            <Label x:Name="lblPositionStatus" Text="Status" IsEnabled="False"
                   Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"/>
            <Label Text="Latitude:" 
                   Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
            <Label x:Name="lblPositionLatitude" Text="Latitude" IsEnabled="False"
                   Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"/>
            <Label Text="Longitude:" 
                   Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
            <Label x:Name="lblPositionLongitude" Text="Longitude" IsEnabled="False"
                   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
            
            <Label Text="My Address:" FontSize="Medium"
                   Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" VerticalOptions="Center"/>
            
            <Label Text="Straat:" HorizontalOptions="StartAndExpand" VerticalOptions="Center"
                   Grid.Row="4" Grid.Column="0" />
            <Label x:Name="lblStreet" Text="Straat" IsEnabled="False"
                   Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>
            <Label x:Name="lblNumber" Text="Nummer" IsEnabled="False"
                   Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="1" HorizontalOptions="End"/>
            
            <Label Text="Gemeente:" 
                   Grid.Row="5" Grid.Column="0" VerticalOptions="Center"/>
            <Label x:Name="lblPostal" Text="PostCode" IsEnabled="False"
                   Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label x:Name="lblCity" Text="Gemeente" IsEnabled="False"
                   Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"/>
            <Label Text="Land:" 
                   Grid.Row="6" Grid.Column="0" VerticalOptions="Center"/>
            <Label x:Name="lblCountryCode" Text="Landcode" IsEnabled="False"
                   Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label x:Name="lblCountry" Text="Land" IsEnabled="False"
                   Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"/>
        </Grid>
        <Button x:Name="btnGetLocation" Text="Get Current Location" 
                VerticalOptions="End"
                Clicked="OnBtnGetLocationClicked"/>
        <!--<Button x:Name="btnSaveLocation" Text="Send Current Location"
                    Clicked="OnBtnSaveLocationClicked" IsEnabled="False"/>-->
    </StackLayout>
</ContentView>